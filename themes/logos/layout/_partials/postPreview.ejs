    <% if (post.image) { %><img class="postPreview-image<% if (post.fade) { %> faded<% } %>" src="<%- url_for(post.path) %><%= post.image %>"><% } %>
    <!-- <h4 class="post-title"><%= post.title %></h4> -->
  </a>
</article>
